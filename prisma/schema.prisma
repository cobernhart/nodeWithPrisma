generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Block {
  id                  String      @id
  type                String?
  name                String?
  blockStatus         BlockStatus
  totalTime           Int?
  timerStartStopTimes DateTime[]
  elapsedTime         Int?
  created             DateTime?   @default(now())
  updated             DateTime?
  deleted             DateTime?
  userId              Int?
  User                User?       @relation(fields: [userId], references: [id])
}

model Session {
  sid    String   @id @unique
  sess   Json
  expire DateTime
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String
  Block    Block[]
}

enum BlockStatus {
  COMPLETED
  RUNNING
  PAUSED
  CREATED
}
